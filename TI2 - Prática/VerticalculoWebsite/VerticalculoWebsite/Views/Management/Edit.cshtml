@model VerticalculoWebsite.Classes.EditUserViewObject

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserProfile</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.userProfile.UserName, Model.userProfile.UserName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.userActualRole, "Tipo de Utilizador: ")
            @Html.DropDownListFor(model => model.allOtherRoles,new SelectList(Model.allOtherRoles))
            @Html.ValidationMessageFor(model => model.userProfile.UserName)
        </div>
        <br/>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
